@model VerserAssetleasingServiceInterface.Models.EndUsersListViewModel

@{
    ViewBag.Title = "Register End Users";
 }

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">


@using (Html.BeginForm("AddEndUser", "RegisterEndUsers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @*Adding new code from this line*@


    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    <link href="css/bootstrap.min.css" rel="stylesheet">

    //User the following link to apply styling from site.css
    @*<link href="css/site.css" rel="stylesheet">*@




    <div class="table-bordered" style="margin:20px; width:680px">
        <div class="panel-heading" align="center" style="height:30PX;background-color:#FFA500;color:white; vertical-align:top">
            <h3 class="panel-title">ADD SITE</h3>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (TempData["StatusMessage"] != null)
        {
            <p><h6> @TempData["StatusMessage"].ToString()</h6></p>
        }
            <div class="panel-body" style="font-size:x-small;color:grey;border-color:gray">

                <div class="col-md-12 col-sm-12">
                    <div class="form-group col-md-5 col-sm-6">

                        @Html.Label("Site Name", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-5 col-md-offset-1">
                        @Html.Label("Address Line 1", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">

                    <div class="form-group col-md-5 col-sm-6">
                        @Html.Label("Address Line 2", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.EmployeeNo, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.EmployeeNo, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                        @Html.Label("Suburb", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })

                    </div>



                </div>

                <div class="col-md-12 col-sm-12">

                    <div class="form-group col-md-5 col-sm-6">
                        @Html.Label("State", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.EmployeeNo, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.EmployeeNo, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                        @Html.Label("Post Code", htmlAttributes: new { @class = "control-label col-md-5" })

                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })

                    </div>



                </div>



                <div class="col-md-12 col-sm-12">


                    <div class="form-group col-md-5 col-sm-6">
                        @Html.Label("Site Company", htmlAttributes: new { @class = "control-label col-md-7" })

                        @Html.EditorFor(model => model.EndUser_Company, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                        @Html.ValidationMessageFor(model => model.EndUser_Company, "", new { @class = "text-danger" })

                    </div>



                </div>

            </div>
        <div class="panel-footer primary" align="left" style="height:50px;vertical-align:top;">
            <input type="submit" value="ADD" class="btn btn-default btn-warning" style="height:32px;vertical-align:top" />
            @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-primary btn-large" })
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

