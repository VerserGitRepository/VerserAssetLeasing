@model VerserAssetleasingServiceInterface.Models.CompanySitesListViewModel

@{
    ViewBag.Title = "Register End Users";
 }




@using (Html.BeginForm("AddSiteInformation", "Sites", FormMethod.Post))
{
    @Html.AntiForgeryToken()



    //User the following link to apply styling from site.css
    @*<link href="css/site.css" rel="stylesheet">*@


    <style type="text/css">

        #deceased {
            background-color: #FFF3F5;
            padding-top: 10px;
            margin-bottom: 10px;
        }

        .remove_field {
            float: right;
            cursor: pointer;
            position: absolute;
        }

            .remove_field:hover {
                text-decoration: none;
            }
    </style>

    <div class="container" style="margin:20px; width:800px">


        <div class="row" style="font-size:x-small;color:grey;border-color:gray">

            <div class="col-md-12">
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("SiteName", htmlAttributes: new { @class = "control-label col-md-7" })
                    @Html.EditorFor(model => model.siteName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.siteName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("AddressLine1", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.addressLine1, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.addressLine1, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("AddressLine2", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.addressLine2, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.addressLine2, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("Suburb", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.suburb, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.suburb, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("State", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.state, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("PostCode", htmlAttributes: new { @class = "control-label col-md-7" })
                    @Html.EditorFor(model => model.postCode, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.postCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("Company", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.site_Company, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.site_Company, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

