@model VerserAssetleasingServiceInterface.Models.EndUsersListViewModel

@{
    ViewBag.Title = "Register End Users";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

@using (Html.BeginForm("AddEndUser", "RegisterEndUsers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @*Adding new code from this line*@


    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="css/bootstrap.min.css" rel="stylesheet">

    //User the following link to apply styling from site.css
    @*<link href="css/site.css" rel="stylesheet">*@


    <style type="text/css">

        #deceased {
            background-color: #FFF3F5;
            padding-top: 10px;
            margin-bottom: 10px;
        }

        .remove_field {
            float: right;
            cursor: pointer;
            position: absolute;
        }

            .remove_field:hover {
                text-decoration: none;
            }
    </style>

    <div class="table-bordered" style="margin:20px; width:800px">
        <div class="panel-heading" align="center" style="height:30PX;background-color:#FFA500;color:white; vertical-align:top">
            <h3 class="panel-title">REGISTER END USER</h3>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (TempData["StatusMessage"] != null)
        {
            <p><h6> @TempData["StatusMessage"].ToString()</h6></p>
        }
        <div class="panel-body" style="font-size:x-small;color:grey;border-color:gray">

            <div class="col-md-12 col-sm-12">
                <div class="form-group col-md-5 col-sm-6">

                    @Html.Label("First Name", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })


                </div>
                <div class="form-group col-md-5 col-md-offset-1">
                    @Html.Label("Last Name", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 col-sm-12">

                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("Employee No", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.EmployeeNo, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.EmployeeNo, "", new { @class = "text-danger" })


                </div>
                <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                    @Html.Label("Department", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })

                </div>



            </div>

            <div class="col-md-12 col-sm-12">

                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("Cost Code", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.CostCode, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.CostCode, "", new { @class = "text-danger" })


                </div>

                <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                    @Html.Label("End User Status", htmlAttributes: new { @class = "control-label col-md-6" })

                    @Html.EditorFor(model => model.EndUserStatus, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.EndUserStatus, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="col-md-12 col-sm-12">

                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("Commencement Date", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.CommencementDate, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.CommencementDate, "", new { @class = "text-danger" })

                </div>
                <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                    @Html.Label("Termination Date", htmlAttributes: new { @class = "control-label col-md-6" })

                    @Html.EditorFor(model => model.TerminationDate, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.TerminationDate, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="col-md-12 col-sm-12">


                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("End User Company", htmlAttributes: new { @class = "control-label col-md-7" })

                    @Html.EditorFor(model => model.EndUser_Company, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.EndUser_Company, "", new { @class = "text-danger" })

                </div>

                <div class="form-group col-md-5 col-md-offset-1 col-sm-6">
                    @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })


                </div>

            </div>

            <div class="col-md-12 col-sm-12">


                <div class="form-group col-md-5 col-sm-6">
                    @Html.Label("End User Site", htmlAttributes: new { @class = "control-label col-md-5" })

                    @Html.EditorFor(model => model.EndUser_Site, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.EndUser_Site, "", new { @class = "text-danger" })

                </div>
            </div>




        </div>
        <div class="panel-footer primary" align="left" style="height:50px;vertical-align:top;">
            <input type="submit" value="REGISTER" class="btn btn-default btn-warning" style="height:32px;vertical-align:top" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-large" })
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .form-group {
        margin-bottom: 2px;
        padding-right: 0;
        padding-left: 0;
        margin: 0px;
        font-size: 12px;
        border-radius: 9px;
        padding-bottom: 5px;
        margin-top: 2px;
    }

    .col-md-6 {
        position: relative;
        min-height: 1px;
        padding-right: 0px;
        padding-left: 0px;
    }

    .row.no-pad > [class*='col-'] {
        padding-right: 0;
        padding-left: 0;
    }

    .btn-warning {
        background-color: #FFA500;
        font-size: 14px;
    }

    .form-control {
        margin-bottom: 2px;
        padding-right: 0;
        padding-left: 0;
        font-size: 12px;
        border-radius: 9px;
        padding-bottom: 5px;
        margin-top: 2px;
    }

    .panel-footer {
        padding: 3px 30px;
        background-color: #f5f5f5;
        border-top: 1px solid #dddddd;
        border-bottom-right-radius: 3px;
        border-bottom-left-radius: 3px;
    }

    .form-group.required .control-label:after {
        content: "*";
        color: red;
        padding-bottom: 15px;
</style>
